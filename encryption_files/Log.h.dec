#ifndef LOG_H
#define LOG_H

#include "Debug.h"
#include <vector>

struct LogEntry {
   std::string timestamp, category, message;
   LogEntry(std::string t,std::string c, std::string m):
      timestamp(t),category(c),message(m) {}
   void print();
};

class Log {
public:
   std::vector<LogEntry> entries;
   Log() {}
   void read_from(std::string filename);
   void print();
   void print(std::vector<int> indices);
};

#endif//LOG_H
